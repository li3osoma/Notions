<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/extCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_circle_black"/>

    <ImageView
        android:id="@+id/intCircle"
        android:src="@drawable/ic_circle_white"
        app:layout_constraintTop_toTopOf="@id/extCircle"
        app:layout_constraintBottom_toBottomOf="@id/extCircle"
        app:layout_constraintEnd_toEndOf="@id/extCircle"
        app:layout_constraintStart_toStartOf="@id/extCircle"
        android:layout_width="33dp"
        android:layout_height="33dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>